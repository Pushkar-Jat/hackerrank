#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.>
void innerPattern(int n) {

int size = 2 * n - 1;
int front = 0;
int back = size - 1;
int a[size][size];
int i,j;
while (n != 0)
{
    for (i = front; i <= back; i++) {
    for (j = front; j <= back; j++) {
        if (i == front || i == back ||
            j == front || j == back)
        a[i][j] = n;
    }
    }
    ++front;
    --back;
    --n;
}
for (i = 0; i < size; i++) {
    for (j = 0; j < size; j++) {
    printf("%d ",a[i][j]);
    }
    printf("\n");
}
}
int main()
{
    int n;
    scanf("%d", &n);
    innerPattern(n);

return 0;
}
